    "version": "0.2.0",
    "configurations": [
        {
            "name": "client",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/cmd/client/main.go"
        },
        {
            "name": "frontend",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/cmd/frontend/main.go"
        },
        {
            "name": "storage",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/cmd/storage/main.go",
            "args": [
                "--id",
                "storage2",
                "--listen",
                "127.0.0.1:8012",
                "--path",
                "./data/s2"
            ]
        },
        {
            "name": "test",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/cmd/test/test.go"
        },
        {
            "name": "test_script",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/test.py"
        }
    ]
}